---
interface Props {
    title?: string;
    url?: string;
    classes?: string;
}

const { title, url, classes } = Astro.props;
---

<button
    aria-label="Volver"
    data-url={url}
    title={title || "Volver"}
    id="btnback"
    type="button"
    class=`bg-blue-700 hover:bg-blue-800 text-white rounded-lg text-sm px-2 py-2 transition-colors ${classes}`
>
    Volver
</button>

<script>
    let btnback = document.getElementById("btnback");
    if (btnback) {
        btnback.addEventListener("click", () => {
            if (btnback.dataset.url) {
                window.location.href = btnback.dataset.url;
            } else {
                window.history.back();
            }
        });
    }
</script>
