---
interface Props {
    texto: string;
    placehold?: string;
    type?: string;
    isrequired?: boolean;
    value?: string;
    classes?: string;
}

interface MyObject {
    [key: string]: string;
}

const {
    type = "text",
    texto,
    placehold,
    isrequired = false,
    value,
    classes = "",
} = Astro.props;

let textCapital = texto[0].toUpperCase() + texto.slice(1);

const dict: MyObject = {
    fecha_inicio: "Fecha de inicio",
    fecha_fin: "Fecha de fin",
    fecha_nacimiento: "Fecha de nacimiento",
    telefono: "Teléfono",
    nif: "NIF",
    nia: "NIA",
    nuss: "NUSS",
    nip: "NIP",
    cif: "CIF",
    nombre_oficial: "Nombre empresarial",
    sitio_web: "Sitio web",
    tecnologias: "Tecnologías",
    direccion: "Dirección",
    descripcion: "Descripción"
};

if (dict[texto]) textCapital = dict[texto];
---

<label
    class=`flex flex-col p-2 gap-1.5 bg-gray-400 rounded-lg shadow-md drop-shadow-md ${classes}`
    ><span
        >{textCapital}
        {
            isrequired && (
                <b class="text-red-600" title="Requerido">
                    *
                </b>
            )
        }
    </span>
    {
        isrequired ? (
            <input
                class="bg-gray-700 border border-gray-400 text-white text-sm rounded-lg p-1.5"
                type={type as astroHTML.JSX.HTMLInputTypeAttribute}
                name={texto}
                id={texto}
                placeholder={placehold}
                value={value}
                required
            />
        ) : (
            <input
                class="bg-gray-700 border border-gray-400 text-white text-sm rounded-lg p-1.5"
                type={type as astroHTML.JSX.HTMLInputTypeAttribute}
                name={texto}
                id={texto}
                placeholder={placehold}
                value={value}
            />
        )
    }
</label>
