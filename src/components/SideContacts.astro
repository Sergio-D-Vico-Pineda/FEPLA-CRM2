---
interface Props {
    title: string;
    object?: Array<any>;
    btntext?: string;
    url?: string;
    urlLink?: string;
}

const { title, object, btntext, url, urlLink } = Astro.props;

const { id } = Astro.params;
---

<div class="gap-2 py-10 px-8 bg-gray-300 rounded-lg shadow-md w-fit">
    <h2 class="text-xl font-semibold">{title}</h2>
    <div class="flex flex-col gap-y-1 my-3">
        {
            object &&
                object.length > 0 &&
                object.map((item) => (
                    <a
                        class="text-blue-600 hover:text-blue-700 hover:underline w-fit"
                        href={`/contacto/${item.id_contacto}`}
                    >
                        <span title={item.puesto}>
                            {item.contacto.nombre} {item.contacto.apellidos}
                        </span>
                    </a>
                ))
        }
    </div>
    <div class="flex flex-col justify-center items-center gap-2">
        <a
            href=`${url}/${id}`
            class="bg-blue-700 hover:bg-blue-800 text-white rounded-lg text-sm px-2 py-2 transition-colors"
        >
            Crear nuevo {btntext}
        </a>
        <a
            href=`${urlLink}/${id}`
            class="bg-blue-700 hover:bg-blue-800 text-white rounded-lg text-sm px-2 py-2 transition-colors"
        >
            Vincular {btntext} existente
        </a>
    </div>
</div>
