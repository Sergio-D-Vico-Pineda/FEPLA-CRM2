---
interface Props {
    title: string;
    object?: Array<any>;
    btntext?: string;
    url?: string;
}

const { title, object, btntext, url } = Astro.props;

const { id } = Astro.params;
---

<div class="gap-2 py-10 px-8 bg-gray-300 rounded-lg shadow-md w-fit">
    <h2 class="text-xl font-semibold">{title}</h2>
    <ul class="flex flex-col gap-y-1 my-3">
        {
            object &&
                object.length > 0 &&
                object.map((item) => (
                    <li class="flex justify-between">
                        <a
                            class="text-blue-600 hover:text-blue-700 hover:underline w-fit"
                            href={`/interaccion/${item.id_interaccion}`}
                        >
                            <span title={item.descripcion}>
                                {item.fecha_interaccion
                                    .toLocaleString()
                                    .split(" ")[0]
                                    .replace(",", "")}
                            </span>
                        </a>
                        <a
                            class="text-black hover:text-gray-600 hover:underline"
                            href={`/interaccion/editar/${item.id_interaccion}`}
                            title="Editar interacción"
                        >
                            ✏
                        </a>
                    </li>
                ))
        }
    </ul>
    <div class="flex flex-col justify-center items-center gap-2">
        <a
            href={`${url}/${id}`}
            class="bg-blue-700 hover:bg-blue-800 text-white rounded-lg text-sm px-2 py-2 transition-colors"
        >
            Crear {btntext}
        </a>
    </div>
</div>
