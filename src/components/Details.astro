---
interface Props {
    title: string;
    classes?: string;
}

const { title, classes } = Astro.props;
---

<details class={classes}>
    <summary class="w-full text-center text-xl font-semibold">{title}</summary>
    <div class="grid grid-cols-2 grid-rows gap-2 pt-2.5">
        <slot />
    </div>
</details>
