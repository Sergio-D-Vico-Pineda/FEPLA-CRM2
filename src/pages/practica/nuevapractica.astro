---
import Layout from "../../layouts/Layout.astro";
import Header from "@comp/Header.astro";
import Footer from "@comp/Footer.astro";
import FormElement from "@comp/FormElement.astro";
import FormElementSelect from "@comp/FormElementSelect.astro";
import BackBtn from "@comp/BackBtn.astro";
import prisma from "@db/index.js";

const erows = await prisma.empresa.findMany({
    where: {
        activo: true,
    },
});
const arows = await prisma.alumno.findMany({
    where: {
        activo: true,
    },
});

const cursos = await prisma.curso.findMany();

/* pro_alu_emp_id, fecha_inicio, fecha_fin, estado, curso, tutor_emp, comentarios, instituto_id, grupo_id, fk id_profesor, alumno_id, empresa_id */
---

<Layout title="Nueva practica" kind={1}>
    <Header />
    <main class="grid place-content-center">
        <form
            class="bg-gray-300 rounded-lg shadow-md w-fit py-10 px-8 flex flex-col"
            id="formnew"
        >
            <fieldset class="grid grid-cols-2 grid-rows gap-2 py-5 px-4">
                <legend
                    class="px-1.5 bg-[#476683] rounded-md text-white text-center text-2xl font-semibold"
                    >Nueva práctica</legend
                >
                <FormElement texto="fecha_inicio" type="date" />
                <FormElement texto="fecha_fin" type="date" />
                <FormElementSelect />
                <div
                    class="flex flex-col p-2 gap-1.5 bg-gray-400 rounded-lg shadow-md drop-shadow-md"
                >
                    Tipo de práctica
                    <select
                        class="bg-gray-700 border border-gray-400 text-white text-sm rounded-lg p-1.5"
                        name="tipo_practica"
                        id="tipo_practica"
                    >
                        <option value="Normal" selected>Normal</option>
                        <option value="Extraordinaria">Extraordinaria</option>
                    </select>
                </div>
                <FormElement texto="tutor_emp" type="text" />
                <FormElement
                    texto="comentarios"
                    placehold="..."
                    type="textarea"
                />
                <div
                    class="flex flex-col p-2 gap-1.5 bg-gray-400 rounded-lg shadow-md drop-shadow-md"
                >
                    <label for="id_empresa">
                        Empresa
                        <span class="text-red-600 font-bold">*</span>
                    </label>
                    <input
                        class="bg-gray-700 border border-gray-400 text-white text-sm rounded-lg p-1.5"
                        type="text"
                        id="id_empresa"
                        list="empresas"
                    />
                </div>
                <div
                    class="flex flex-col p-2 gap-1.5 bg-gray-400 rounded-lg shadow-md drop-shadow-md"
                >
                    <label for="id_alumno">
                        Alumno <span class="text-red-600 font-bold">*</span>
                    </label>
                    <input
                        class="bg-gray-700 border border-gray-400 text-white text-sm rounded-lg p-1.5"
                        type="text"
                        id="id_alumno"
                        list="alumnos"
                    />
                </div>
                <div
                    class="flex flex-col p-2 gap-1.5 bg-gray-400 rounded-lg shadow-md drop-shadow-md"
                >
                    <label for="id_curso">
                        Curso
                        <span class="text-red-600 font-bold">*</span>
                    </label>
                    <input
                        class="bg-gray-700 border border-gray-400 text-white text-sm rounded-lg p-1.5 disabled:cursor-not-allowed disabled:bg-gray-800"
                        type="text"
                        id="id_curso"
                        list="cursos"
                    />
                </div>
                <datalist id="cursos">
                    {
                        cursos.map(({ anio_academico, id_curso }) => (
                            <option value={`${anio_academico} (${id_curso})`} />
                        ))
                    }
                </datalist>
                <datalist id="empresas">
                    {
                        erows.map((row) => (
                            <option value={row.id_empresa.toString()}>
                                {row.nombre}
                            </option>
                        ))
                    }
                </datalist>
                <datalist id="alumnos">
                    {
                        arows.map((row) => (
                            <option value={row.id_alumno.toString()}>
                                {row.nombre}
                            </option>
                        ))
                    }
                </datalist>
            </fieldset>
            <div class="text-center">
                <button
                    type="submit"
                    id="btnsubmit"
                    class="mx-auto bg-blue-700 hover:bg-blue-800 text-white rounded-lg text-sm px-2 py-2 transition-colors"
                    >Crear nueva practica</button
                >
                <BackBtn />
            </div>
        </form>
    </main>
    <Footer />
</Layout>

<script is:inline type="module">
    import { apiurl, data } from "/utils.js";
    const form = document.querySelector("form");

    async function sendData(e) {
        e.preventDefault();

        let id_profesor = localStorage.getItem("id_profesor");

        if (!id_profesor) {
            alert("No has iniciado sesión");
            return;
        }

        data.fecha_inicio = form.fecha_inicio.value;
        data.fecha_fin = form.fecha_fin.value;
        data.estado = form.estado.value;
        data.curso = form.curso.value;
        data.tutor_emp = form.tutor_emp.value;
        data.comentarios = form.comentarios.value;
        data.empresa_id = form.empresa_id.value;
        data.alumno_id = form.alumno_id.value;
        data.id_profesor = id_profesor;

        Object.keys(data).forEach((key) => {
            if (data[key] == "") data[key] = null;
        });

        // console.log(data);
        const response = await fetch(apiurl + "/practica", {
            method: "POST",
            headers: {
                "Content-Type": "application/json",
            },
            body: JSON.stringify(data),
        });
        alert((await response.json()).message);
        if (response.ok) {
            /* window.location.href = "/practica"; */
            window.location.reload();
        }
    }

    document.getElementById("btnsubmit").addEventListener("click", sendData);
</script>
