---
import Layout from "../../layouts/Layout.astro";
import Header from "@comp/Header.astro";
import Footer from "@comp/Footer.astro";
// import { rows } from "@comp/institutos.js";

import { tursodb } from "@r/astro.config.mjs";
import BackBtn from "@comp/BackBtn.astro";

const { rows } = await tursodb.execute("SELECT * FROM instituto;");
/* let rows = [
    {
        instituto_id: 1,
        nombre: "Instituto 1",
        descripcion: "Descripción 1",
        direccion: "Calle 1",
        sitio_web: "www.instituto1.com",
        telefono: "123456789",
        comentarios: "Comentarios 1",
        fecha_creacion: "2023-01-01",
        fecha_actualizacion: "2023-01-01",
    }
] */
---

<Layout title="Lista de institutos">
    <Header />
    <div class="flex justify-between w-full px-5 py-2 h-fit">
        <h2 class="text-3xl">Listado de institutos</h2>
        <div class="flex gap-4">
            { rows.length > 0 && (
            <input
                id="busqueda"
                class="bg-gray-700 border border-gray-300 text-white text-sm rounded-lg p-1.5"
                type="text"
                placeholder="Nombre del instituto"
            />
            <button
                id="btnbuscar"
                type="button"
                class="bg-blue-700 hover:bg-blue-800 text-white rounded-lg text-sm px-2 py-2 transition-colors"
                >Buscar</button
            >
            )}
            <button
                id="btnnew"
                class="bg-blue-700 hover:bg-blue-800 text-white rounded-lg text-sm px-2 py-2 transition-colors"
                >Nuevo instituto</button
            >
            <BackBtn />
        </div>
    </div>
    <main class="px-20 py-5">
        <div
            class="max-h-[68vh] overflow-y-auto shadow-md rounded-lg"
        >
        { rows.length > 0 ? (
            <table class="min-w-full bg-white overflow-y-auto">
                <thead class="bg-gray-100">
                    <tr class="border-b-2 border-black border-solid">
                        <th
                            class="px-4 py-3 text-left text-sm font-semibold text-gray-600"
                            >Nombre</th
                        >
                        <th
                            class="px-4 py-3 text-left text-sm font-semibold text-gray-600"
                            >Descripción</th
                        >
                        <th
                            class="px-4 py-3 text-left text-sm font-semibold text-gray-600"
                            >Dirección</th
                        >
                        <th
                            class="px-4 py-3 text-left text-sm font-semibold text-gray-600"
                            >Teléfono</th
                        >
                        <th
                            class="px-4 py-3 text-center text-sm font-semibold text-gray-600"
                            >Acciones</th
                        >
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    {
                        rows.map((instituto) => (
                            <tr class="hover:bg-gray-100" data-active="true">
                                <td class="px-4 py-3 text-sm text-gray-900">{instituto.nombre}</td>
                                <td class="px-4 py-3 text-sm text-gray-900">{instituto.descripcion}</td>
                                <td class="px-4 py-3 text-sm text-gray-500">{instituto.direccion}</td>
                                <td class="px-4 py-3 text-sm text-blue-500">{instituto.telefono}</td>
                                <td class="px-4 py-3 text-sm text-right">
                                    <div class="flex justify-center space-x-2">
                                        <a
                                            href=`/instituto/editar/${instituto.instituto_id}`
                                            class="bg-blue-500 hover:bg-blue-600 text-white rounded px-3 py-1 transition-colors duration-300">
                                            Editar
                                        </a>
                                        <a
                                        href=`/instituto/${instituto.instituto_id}`
                                        class="bg-gray-500 hover:bg-gray-600 text-white rounded px-3 py-1 transition-colors duration-300">
                                            Detalles
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        ))
                    }
                </tbody>
            </table>
            ) : (
                <h3 class="py-10 text-center text-red-500 text-3xl">No hay institutos registrados</h3>
            )}
        </div>
    </main>
    <Footer />
</Layout>
<script>
    const inputBusqueda = document.querySelector("#busqueda") as HTMLInputElement;
    const btnBusqueda = document.querySelector("#btnbuscar") as HTMLButtonElement;
    const btnnew = document.getElementById("btnnew") as HTMLButtonElement;
    const allrows = document.querySelectorAll("tr[data-active]");

    btnnew.addEventListener("click", () => {
        window.location.href = "/instituto/nuevoinstituto";
    });

    if (btnBusqueda) {
        btnBusqueda.addEventListener("click", () => {
            const textoBusqueda = inputBusqueda.value.toLowerCase();
            allrows.forEach(row => {
                let textoCelda = row.querySelector("td").textContent.toLowerCase();
                if (textoCelda.includes(textoBusqueda)) {
                    row.classList.remove("hidden");
                } else {
                    row.classList.add("hidden");
                }
            });
        });
    }

    if (inputBusqueda) {   
        inputBusqueda.addEventListener("keydown", (e) => {
            if (e.key === "Enter") {
                btnBusqueda.click();
            }
        });
    }

</script>
